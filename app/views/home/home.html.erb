<main>
  <div class='flex flex-row flex-wrap bg-gray-200'>
      <div class='md:w-1/2 w-full h-[60vh] flex justify-start items-center'>
        <div class="mx-auto  flex flex-col space-y-4 px-6">
            <h1 class="text-4xl font-bold tracking-tight text-indigo-600 sm:text-6xl">
              <span class='text-gray-800'>Fitness</span> 
              <br/>& Mindset
            </h1>
            <p class="mt-4 text-lg leading-8 text-gray-700">Shape your physique through a determined state of mind.</p>
            <div class="flex items-center justify-start gap-x-6">
              <% button_item_class = "cursor-pointer px-5 py-2 text-base font-semibold leading-7 transition-all duration-500 easy-in-out" %>
              <% button1_item_class = "bg-indigo-200 text-gray-800 hover:text-indigo-200 hover:bg-gray-800" %>
              <% button2_item_class = "bg-gray-800 text-indigo-200 hover:text-gray-800 hover:bg-indigo-200" %>
              <%= link_to "Get Started", root_path, class: "#{button_item_class} #{button2_item_class}" %>
              <%= link_to "Join Now", root_path, class: "#{button_item_class} #{button1_item_class}" %>
            </div>
        </div>
      </div>

      <div class='md:w-1/2 w-full h-[60vh] flex justify-center items-center'>
        <%= image_tag "fitness.jpg", class: "w-full h-full object-cover", layout: "fill" %>
      </div>
  </div>
  <%= render "layouts/fitness" %>

  <% if @daily_workout %>
    <%= render "daily_workout/daily_workout" %>
  <% end %>
</main>